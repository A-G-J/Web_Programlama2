@model IEnumerable<Berber_Shop.Models.Randevu>

<div class="container mt-5">
    <h2 class="text-center mb-4">Randevularım</h2>

    @if (!Model.Any())
    {
        <p class="text-muted text-center">Şu anda herhangi bir randevunuz bulunmamaktadır.</p>
    }
    else
    {
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Hizmet Adı</th>
                    <th>Çalışan Adı</th>
                    <th>Tarih</th>
                    <th>Saat</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var randevu in Model)
                {
                    <tr>
                        <td>@randevu.Hizmet?.Ad</td>
                        <td>@randevu.Calisan?.Ad @randevu.Calisan?.Soyad</td>
                        <td>@randevu.Tarih.ToShortDateString()</td>
                        <td>@randevu.Saat</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
