@model Berber_Shop.Models.Calisan

<div class="container mt-5">
    <h2>Çalışan Bilgilerini Düzenle</h2>
    <form method="post" asp-action="CalisanDuzenle">
        <input type="hidden" name="Id" value="@Model.Id" />
        <div class="mb-3">
            <label for="Ad">Adı:</label>
            <input type="text" id="Ad" name="Ad" class="form-control" value="@Model.Ad" required />
        </div>
        <div class="mb-3">
            <label for="Email">E-posta:</label>
            <input type="email" id="Email" name="Email" class="form-control" value="@Model.Email" required />
        </div>
        <button type="submit" class="btn btn-primary">Güncelle</button>
    </form>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success mt-3">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger mt-3">
            @TempData["ErrorMessage"]
        </div>
    }
</div>
